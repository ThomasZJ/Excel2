<Window x:Class="Excel2.MainWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" TextElement.Foreground="{DynamicResource MaterialDesignBody}" TextElement.FontWeight="Regular" TextElement.FontSize="13" TextOptions.TextFormattingMode="Ideal" TextOptions.TextRenderingMode="Auto" Background="{DynamicResource MaterialDesignPaper}" FontFamily="{DynamicResource MaterialDesignFont}"
        MinWidth="610" Width="1220" MinHeight="400" Height="860" WindowStartupLocation="CenterScreen">

    <Grid Loaded="Grid_Loaded">
        <Grid>
            <materialDesign:ColorZone Mode="PrimaryDark" Padding="11">
                <StackPanel Orientation="Horizontal">
                    <!--<ToggleButton Style="{DynamicResource MaterialDesignHamburgerToggleButton}" Checked="ToggleButton_Checked"/>-->
                    <materialDesign:PackIcon Kind="Toolbox" Width="32" Height="32" />
                    <TextBlock FontSize="32" VerticalAlignment="Center" Margin="16 0 0 0">
                    Excel to . . .
                    </TextBlock>
                </StackPanel>
            </materialDesign:ColorZone>
        </Grid>
        <Grid Margin="0,65,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="600" />
                <ColumnDefinition MinWidth="600"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Stretch">
                <Grid>
                    <TextBox materialDesign:HintAssist.Hint="Excel files path" Style="{StaticResource MaterialDesignFloatingHintTextBox}" x:Name="exclepath_textbox" Margin="10,0,60,0" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" LostKeyboardFocus="Textbox_LostFocus" PreviewDragOver="Textbox_DragEnter" PreviewDrop="Textbox_DragDrop"/>

                    <TextBox materialDesign:HintAssist.Hint="json path" Style="{StaticResource MaterialDesignFloatingHintTextBox}" x:Name="jsonpath_textbox" Margin="10,40,60,0" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" LostKeyboardFocus="Textbox_LostFocus" PreviewDragOver="Textbox_DragEnter" PreviewDrop="Textbox_DragDrop"/>

                    <TextBox materialDesign:HintAssist.Hint="Template Classes files path" Style="{StaticResource MaterialDesignFloatingHintTextBox}" x:Name="templatefilepath_textbox" Margin="10,80,60,0" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" LostKeyboardFocus="Textbox_LostFocus" PreviewDragOver="Textbox_DragEnter" PreviewDrop="Textbox_DragDrop"/>

                    <Button x:Name="excelpath_btn" Content="..." Margin="0,12,10,0" VerticalAlignment="Top" Height="25" Click="Button_Click" HorizontalAlignment="Right" Width="45" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="5" />
                    <Button x:Name="jsonpath_btn" Content="..." Margin="0,52,10,0" VerticalAlignment="Top" Height="25" Click="Button_Click" HorizontalAlignment="Right" Width="45" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="5" />
                    <Button x:Name="templatefilepath_btn" Content="..." Margin="0,92,10,0" VerticalAlignment="Top" Height="25" Click="Button_Click" HorizontalAlignment="Right" Width="45" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="5" />

                    <ListView x:Name="excelfile_listview" Margin="10,125,10,165" MouseLeftButtonUp="ListView_MouseClick">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                                <GridViewColumn Header="FileName" DisplayMemberBinding="{Binding FileName}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="begin_btn" Content="Begin" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="28" VerticalContentAlignment="Bottom" Margin="70,0,70,15" Style="{StaticResource MaterialDesignRaisedDarkButton}" materialDesign:ButtonAssist.CornerRadius="5" />
                    <Label Style="{StaticResource MaterialDesignLabel}" Content="Head" Margin="0,0,70,130" VerticalAlignment="Bottom" BorderBrush="#00000000" Height="26" HorizontalAlignment="Right" Width="47"/>
                    <ComboBox x:Name="filternum_combobox" Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,10,130" Height="26" SelectionChanged="ComboBox_SelectionChanged" Cursor="Arrow" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsReadOnly="True" Width="60">

                        <!--<Label Content="1" Background="#00000000" BorderBrush="#00000000" Width="50" />
                        <Label Content="2" Background="#00000000" BorderBrush="#00000000" Width="50" />
                        <Label Content="3" Background="#00000000" BorderBrush="#00000000" Width="50" />-->
                        <ComboBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />


                            </ItemsPanelTemplate>
                        </ComboBox.ItemsPanel>

                        
                    </ComboBox>
                    <CheckBox Style="{StaticResource MaterialDesignAccentCheckBox}" x:Name="mutilsheet_checkbox" Content="Multi Sheet" HorizontalAlignment="Left" Margin="10,0,0,122" VerticalAlignment="Bottom" Checked="Multi_Checked" Unchecked="Multi_Checked" Height="26" />

                    <!--<ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="Multi Sheet" HorizontalAlignment="Left" Margin="10,0,0,130" VerticalAlignment="Bottom" Checked="Multi_Checked" Unchecked="Multi_Checked" Height="26"/>
                    <Label HorizontalAlignment="Left" Margin="50,0,0,130" VerticalAlignment="Bottom" Content="Multi Sheet" />-->


                    <RadioButton Style="{StaticResource MaterialDesignRadioButton}" x:Name="dotcs_radiobtn" Content="csharp" Margin="10,0,0,90" HorizontalAlignment="Left" VerticalAlignment="Bottom" Checked="Radiobtn_Checked" Unchecked="Radiobtn_Checked"/>

                    <RadioButton Style="{StaticResource MaterialDesignRadioButton}" x:Name="dotts_radiobtn" Content="typescript" Margin="10,0,0,65" HorizontalAlignment="Left" VerticalAlignment="Bottom" Checked="Radiobtn_Checked" Unchecked="Radiobtn_Checked"/>

                    <TextBox materialDesign:HintAssist.Hint="Exclude tags" Style="{StaticResource MaterialDesignFloatingHintTextBox}" x:Name="signsheet_textbox" HorizontalAlignment="Left" Margin="103,0,0,119" Width="90" VerticalAlignment="Bottom" TextChanged="TextBox_TextChanged"/>
                    <ProgressBar x:Name="progressbar" Height="5" Margin="0" VerticalAlignment="Bottom" Value="90">
                    </ProgressBar>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" Height="64" VerticalAlignment="Top">
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" x:Name="jsonradiobtn"  Margin="4" IsChecked="True" Content="Json" Checked="Radiobtn_Checked"/>
                    <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" x:Name="dotfileradiobtn" Margin="4" IsChecked="False" Content="Template" Checked="Radiobtn_Checked"/>
                </StackPanel>
                <Grid Margin="0,64,0,0">
                    <avalonEdit:TextEditor Background="{DynamicResource MaterialDesignPaper}"  x:Name="textview" FontFamily="Consolas" SyntaxHighlighting="Json"  FontSize="12pt" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" ShowLineNumbers="True" VerticalScrollBarVisibility="Auto" WordWrap="True" />
                </Grid>
                <!--<TabControl>
                    <TabItem Header="Json" Width="auto">
                        <Grid >
                            <avalonEdit:TextEditor x:Name="jsontabitem" FontFamily="Consolas" SyntaxHighlighting="json"  FontSize="12pt" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" ShowLineNumbers="True" VerticalScrollBarVisibility="Auto" WordWrap="True"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Template" Width="auto">
                        <Grid>
                            <avalonEdit:TextEditor x:Name="dotcsfiletabitem" FontFamily="Consolas" SyntaxHighlighting="C#" FontSize="12pt" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" ShowLineNumbers="True" WordWrap="False" VerticalScrollBarVisibility="Auto">
                            </avalonEdit:TextEditor>
                        </Grid>
                    </TabItem>
                </TabControl>-->
            </Grid>
        </Grid>
    </Grid>
</Window>
